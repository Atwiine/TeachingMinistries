<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    android:orientation="vertical"
    tools:context=".Alphas.OtherTeachersOptions">


    <RelativeLayout
        android:id="@+id/lines"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/purple_700"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bbs"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:onClick="back"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/bbs"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="What other teachers are up to"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bb"
        android:layout_below="@+id/lines">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear_alpha1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bg_home"
                    android:visibility="visible">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="See what "
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text=""
                        android:layout_gravity="center_vertical"
                        android:id="@+id/selected_alpha"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text=" is up to "
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.9dp"
                    android:background="@color/army"
                    />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/card_reg_students"
                    android:layout_margin="10dp"
                    android:onClick="openRegisterStudentsAlpha1"
                    app:cardBackgroundColor="@color/purple_5003"
                    app:cardCornerRadius="10dp"
                    android:visibility="gone"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/v1"
                            android:layout_width="200dp"
                            android:layout_height="10dp"
                            android:background="@color/army" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/v2"
                            android:layout_below="@id/v1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <!--                            <ImageView-->
                            <!--                                android:layout_width="50dp"-->
                            <!--                                android:layout_height="match_parent"-->
                            <!--                                android:layout_margin="5dp"-->
                            <!--                                android:src="@drawable/ic_baseline_add_circle_24" />-->

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/montserrat"
                                android:text="Registered participants"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                        </LinearLayout>


                        <View
                            android:id="@+id/v2"
                            android:layout_width="200dp"
                            android:layout_height="10dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/army" />

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:id="@+id/card_received_students"
                    android:onClick="openReceivedStudentsAlpha1"
                    app:cardBackgroundColor="@color/purple_5003"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/v16"
                            android:layout_width="200dp"
                            android:layout_height="10dp"
                            android:background="@color/army" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/v26"
                            android:layout_below="@id/v16"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <!--                            <ImageView-->
                            <!--                                android:layout_width="50dp"-->
                            <!--                                android:layout_height="match_parent"-->
                            <!--                                android:layout_margin="5dp"-->
                            <!--                                android:src="@drawable/ic_baseline_add_circle_24" />-->

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/montserrat"
                                android:text="Received participants"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                        </LinearLayout>


                        <View
                            android:id="@+id/v26"
                            android:layout_width="200dp"
                            android:layout_height="10dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/army" />

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:onClick="openPresentStudents"
                    app:cardBackgroundColor="@color/purple_5003"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/v13"
                            android:layout_width="200dp"
                            android:layout_height="10dp"
                            android:background="@color/army" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/v23"
                            android:layout_below="@id/v13"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/montserrat"
                                android:text="Present participants"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                        </LinearLayout>


                        <View
                            android:id="@+id/v23"
                            android:layout_width="200dp"
                            android:layout_height="10dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/army" />

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:onClick="openMissedStudents"
                    app:cardBackgroundColor="@color/purple_5003"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/v136"
                            android:layout_width="200dp"
                            android:layout_height="10dp"
                            android:background="@color/army" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/v236"
                            android:layout_below="@id/v136"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/montserrat"
                                android:text="Missed participants"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                        </LinearLayout>


                        <View
                            android:id="@+id/v236"
                            android:layout_width="200dp"
                            android:layout_height="10dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/army" />

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/bb"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <include layout="@layout/activity_bottom" />
    </RelativeLayout>
</RelativeLayout>