<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/balance_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/montserrat"
                            android:text="Title"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:fontFamily="@font/montserrat"
                            android:text="title"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.6dp"
                            android:background="@color/purple_700" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:fontFamily="@font/montserrat"
                                    android:text="Order confirmation was successful"
                                    android:id="@+id/success_order_notification"
                                    android:textColor="@color/teal_700"
                                    android:layout_gravity="center"
                                    android:textSize="12sp"
                                    android:visibility="gone" />

                                <TextView
                                    android:layout_gravity="center"
                                    android:id="@+id/denied_order_notification"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:fontFamily="@font/montserrat"
                                    android:maxLength="100"
                                    android:text="Sorry but your order was denied, to find out why the order was denied follow the options below"
                                    android:textColor="@color/red"
                                    android:textSize="12sp"
                                    android:textAlignment="center"
                                    android:visibility="gone" />


                                <TextView
                                    android:layout_gravity="center"
                                    android:id="@+id/status_notification"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:fontFamily="@font/montserrat"
                                    android:maxLength="100"
                                    android:text="Sorry but your order was denied, to find out why the order was denied follow the options below"
                                    android:textColor="@color/red"
                                    android:textSize="12sp"
                                    android:textAlignment="center"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:id="@+id/linear_reason_notification"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:orientation="vertical"
                                    android:layout_gravity="center"
                                    android:visibility="gone">

                                <TextView
                                    android:layout_gravity="center"
                                    android:id="@+id/denied_title_reason_notification"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:fontFamily="@font/montserrat"
                                    android:maxLength="100"
                                    android:text="Reason why order was denied"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textAlignment="center"
                                    android:visibility="visible" />

                                <TextView
                                    android:layout_gravity="center"
                                    android:id="@+id/denied__reason_notification"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:fontFamily="@font/montserrat"
                                    android:maxLength="100"
                                    android:text="erewewewew"
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    android:textAlignment="center"
                                    android:visibility="visible" />

                                </LinearLayout>

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/reasons_why_denied"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_margin="5dp"
                                    android:visibility="gone"
                                    android:layout_marginEnd="6dp"
                                    app:cardBackgroundColor="@color/red">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_gravity="center"
                                            android:layout_margin="4dp"
                                            android:fontFamily="@font/montserrat"
                                            android:text="View reasons "
                                            android:textColor="@color/white"
                                            android:textSize="12sp"
                                            android:visibility="visible" />

                                    </RelativeLayout>
                                </com.google.android.material.card.MaterialCardView>


                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/hide_reasons_why_denied"
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_margin="5dp"
                                    android:visibility="gone"
                                    android:layout_marginEnd="6dp"
                                    app:cardBackgroundColor="@color/red">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerInParent="true"
                                            android:layout_gravity="center"
                                            android:layout_margin="4dp"
                                            android:fontFamily="@font/montserrat"
                                            android:text="Hide reasons"
                                            android:textColor="@color/white"
                                            android:textSize="12sp"
                                            android:visibility="visible" />

                                    </RelativeLayout>
                                </com.google.android.material.card.MaterialCardView>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ennttrr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:orientation="vertical"
                                android:visibility="gone">


                                <TextView
                                    android:id="@+id/id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:fontFamily="@font/montserrat"
                                    android:text="id"
                                    android:textColor="@color/purple_700"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>
                        <TextView
                            android:id="@+id/date_not"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:fontFamily="@font/montserrat"
                            android:text="date"
                            android:layout_gravity="end"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>

