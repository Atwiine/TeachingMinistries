<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:paddingLeft="1dp"
    android:paddingRight="1dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/fcard_sms_farmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/background_register_btn"
        app:cardBackgroundColor="@color/dot_light_screen4"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:id="@+id/fsms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fsender_no"
                android:fitsSystemWindows="true"
                android:focusable="true"
                android:gravity="center_horizontal"
                android:text="Message from sender"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fsender_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="phone"
                android:visibility="visible" />

            <TextView
                android:id="@+id/ftime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fsms"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:fitsSystemWindows="true"
                android:focusable="true"
                android:text="time:" />

            <TextView
                android:id="@+id/fsession_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ftime"
                android:text="phone"
                android:visibility="gone" />

            <TextView
                android:id="@+id/freciever_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fsession_no"
                android:text="phone"
                android:visibility="gone" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>